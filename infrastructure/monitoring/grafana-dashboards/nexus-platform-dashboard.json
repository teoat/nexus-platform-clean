{
  "dashboard": {
    "id": null,
    "title": "NEXUS Platform - Production Dashboard",
    "tags": ["nexus", "platform", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"nexus-backend\"}[5m])) by (method, endpoint)",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "legend": {
          "show": true,
          "values": false,
          "current": false,
          "max": false,
          "min": false,
          "avg": false
        }
      },
      {
        "id": 2,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"nexus-backend\"}[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"nexus-backend\"}[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0,
            "logBase": 1
          }
        ],
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"nexus-backend\",status=~\"5..\"}[5m])) by (status)",
            "legendFormat": "{{status}} errors",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(nginx_connections_active{job=\"nexus-nginx\"})",
            "legendFormat": "Active connections",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"nexus-platform\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "yAxes": [
          {
            "label": "CPU cores",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"nexus-platform\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        }
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "singlestat",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{job=\"nexus-postgres\"}",
            "legendFormat": "Active connections",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
        "valueName": "current",
        "format": "short",
        "thresholds": "10,20",
        "colorBackground": true,
        "colorValue": false,
        "colors": ["#d44a3a", "#e24d42", "#299c46"]
      },
      {
        "id": 8,
        "title": "Redis Memory Usage",
        "type": "singlestat",
        "targets": [
          {
            "expr": "redis_memory_used_bytes{job=\"nexus-redis\"} / 1024 / 1024",
            "legendFormat": "Memory used (MB)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
        "valueName": "current",
        "format": "short",
        "thresholds": "100,500",
        "colorBackground": true,
        "colorValue": false,
        "colors": ["#d44a3a", "#e24d42", "#299c46"]
      },
      {
        "id": 9,
        "title": "Pod Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_status_phase{namespace=\"nexus-platform\"}",
            "legendFormat": "{{pod}} - {{phase}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "transform": "table",
        "columns": [
          {
            "text": "Pod",
            "value": "pod"
          },
          {
            "text": "Status",
            "value": "phase"
          },
          {
            "text": "Value",
            "value": "Value"
          }
        ]
      },
      {
        "id": 10,
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=\"nexus-backend\"}[5m])) by (endpoint))",
            "legendFormat": "{{endpoint}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "transform": "table",
        "columns": [
          {
            "text": "Endpoint",
            "value": "endpoint"
          },
          {
            "text": "Requests/sec",
            "value": "Value"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kubernetes_namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "pod",
          "type": "query",
          "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(kube_deployment_status_replicas[1m]) > 0",
          "iconColor": "rgba(0, 211, 255, 1)",
          "enable": true
        }
      ]
    }
  }
}
