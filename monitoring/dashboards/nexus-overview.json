{
  "dashboard": {
    "id": null,
    "title": "NEXUS Platform Overview",
    "tags": ["nexus", "platform", "overview"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend API"
          },
          {
            "expr": "up{job=\"frontend\"}",
            "legendFormat": "Frontend"
          },
          {
            "expr": "up{job=\"nginx\"}",
            "legendFormat": "Nginx Proxy"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "http_request_duration_seconds{job=\"backend\"}",
            "legendFormat": "Backend API"
          },
          {
            "expr": "nginx_http_request_duration_seconds{job=\"nginx\"}",
            "legendFormat": "Nginx Proxy"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\"}[5m])",
            "legendFormat": "Backend API"
          },
          {
            "expr": "rate(nginx_http_requests_total{job=\"nginx\"}[5m])",
            "legendFormat": "Nginx Proxy"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\",code=~\"5..\"}[5m])",
            "legendFormat": "Backend 5xx Errors"
          },
          {
            "expr": "rate(nginx_http_requests_total{job=\"nginx\",status=~\"5..\"}[5m])",
            "legendFormat": "Nginx 5xx Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
