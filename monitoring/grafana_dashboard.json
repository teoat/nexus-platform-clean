{
  "dashboard": {
    "id": null,
    "title": "NEXUS Platform - SSOT System Monitoring",
    "tags": ["nexus", "ssot", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "SSOT System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"nexus-backend\"}",
            "legendFormat": "Backend Status"
          },
          {
            "expr": "up{job=\"nexus-frontend\"}",
            "legendFormat": "Frontend Status"
          },
          {
            "expr": "up{job=\"nexus-frenly-ai\"}",
            "legendFormat": "Frenly AI Status"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "SSOT Operations Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ssot_operations_total[5m])",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "yAxes": [
          {
            "label": "Operations/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "yAxes": [
          {
            "label": "Error Rate (req/s)",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_stat_database_max_connections",
            "legendFormat": "Max Connections"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Redis Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_keyspace_hits_total",
            "legendFormat": "Cache Hits"
          },
          {
            "expr": "redis_keyspace_misses_total",
            "legendFormat": "Cache Misses"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "yAxes": [
          {
            "label": "Operations",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "SSOT Alias Resolution",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ssot_alias_resolutions_total[5m])",
            "legendFormat": "Alias Resolutions/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ssot_alias_resolution_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile latency"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "yAxes": [
          {
            "label": "Operations/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total[5m])",
            "legendFormat": "CPU Usage - {{container}}"
          },
          {
            "expr": "container_memory_usage_bytes",
            "legendFormat": "Memory Usage - {{container}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "yAxes": [
          {
            "label": "Usage",
            "min": 0
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}
