# NEXUS Platform V3.0 - Production Environment Variables

# Application
NEXUS_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://nexus:${POSTGRES_PASSWORD}@postgres:5432/nexus_prod
POSTGRES_DB=nexus_prod
POSTGRES_USER=nexus
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# Security
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your_encryption_key_32_chars_long
SECRET_KEY=your_secret_key_for_sessions

# CORS
CORS_ALLOWED_ORIGINS=https://nexus-platform.com,https://www.nexus-platform.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Requested-With,X-CSRF-Token

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_REQUEST_SIZE=10485760

# Security Features
ENABLE_HTTPS_REDIRECT=true
TRUSTED_HOSTS=nexus-platform.com,www.nexus-platform.com
ENABLE_AUDIT_LOGGING=true
ENABLE_THREAT_DETECTION=true
ENABLE_ZERO_TRUST=true

# SSL/TLS
SSL_KEYFILE=/etc/nginx/ssl/nexus-platform.key
SSL_CERTFILE=/etc/nginx/ssl/nexus-platform.crt

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# AI Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance
WORKERS=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
TIMEOUT=30
