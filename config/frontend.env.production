# NEXUS Platform - Frontend Production Environment
# This file contains environment variables for production deployment

# API Configuration
REACT_APP_API_URL=https://api.nexusplatform.com
REACT_APP_WS_URL=wss://api.nexusplatform.com/ws
REACT_APP_API_GATEWAY_URL=https://api.nexusplatform.com

# Service URLs (for microservices architecture)
REACT_APP_USER_SERVICE_URL=https://api.nexusplatform.com/users
REACT_APP_TRANSACTION_SERVICE_URL=https://api.nexusplatform.com/transactions
REACT_APP_ACCOUNT_SERVICE_URL=https://api.nexusplatform.com/accounts
REACT_APP_ANALYTICS_SERVICE_URL=https://api.nexusplatform.com/analytics
REACT_APP_FILE_SERVICE_URL=https://api.nexusplatform.com/files
REACT_APP_NOTIFICATION_SERVICE_URL=https://api.nexusplatform.com/notifications

# Environment Configuration
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=error

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true

# Development Tools (Disabled in production)
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_API_LOGGING=false

# Security (Production values - should be set via secure environment)
REACT_APP_JWT_SECRET=${JWT_SECRET_KEY}
REACT_APP_ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External Services (Production)
REACT_APP_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
REACT_APP_SENTRY_DSN=${SENTRY_DSN}
REACT_APP_MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# API Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=30000
REACT_APP_WS_TIMEOUT=10000

# Pagination Defaults
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Cache Configuration
REACT_APP_CACHE_TTL=300000
REACT_APP_ENABLE_CACHE=true

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_LANGUAGE=en

# Production Server Configuration
PORT=3000
BROWSER=none
GENERATE_SOURCEMAP=false
