# Nexus Financial Platform - Environment Configuration

# Application
NEXUS_MODE=development
NEXUS_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql://nexus:nexus_password@localhost:5432/nexus
POSTGRES_DB=nexus
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=4000
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Frontend
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nexus.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.csv,.xlsx

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# External APIs (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
