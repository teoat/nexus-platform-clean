# NEXUS Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///./nexus.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus_db
DB_USER=nexus_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# JWT Configuration
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_EXPIRATION_HOURS=24

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your_super_secure_secret_key_here_minimum_32_characters
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=NEXUS Platform
VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
