# NEXUS Platform - Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:8000

# Microservices URLs
REACT_APP_USER_SERVICE_URL=http://localhost:8001
REACT_APP_TRANSACTION_SERVICE_URL=http://localhost:8002
REACT_APP_ACCOUNT_SERVICE_URL=http://localhost:8003
REACT_APP_ANALYTICS_SERVICE_URL=http://localhost:8004
REACT_APP_FILE_SERVICE_URL=http://localhost:8005
REACT_APP_NOTIFICATION_SERVICE_URL=http://localhost:8006

# Analytics Configuration
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ANALYTICS_TRACKING_ID=your-tracking-id

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_REAL_TIME=true

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Performance Configuration
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# Security Configuration
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_CSP=true
